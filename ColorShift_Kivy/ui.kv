<BoxLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Image:
        source: 'assets/logo.png'
        size_hint: (1, 0.3)

    FileChooserIconView:
        id: file_chooser
        size_hint: (1, 0.6)

    Button:
        text: 'Apply Color Shift'
        size_hint: (1, 0.1)
        on_press: app.apply_color_shift(self)

    Label:
        id: status_label
        text: 'Choose an image to apply ColorShift'
        size_hint: (1, 0.1)
